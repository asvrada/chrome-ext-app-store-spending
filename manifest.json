{
    "manifest_version": 3,
    "name": "How much did I spent on App Store",
    "version": "1.0",
    "description": "Securely summarize your Apple's App Store purchase history.",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "images/icon-32.png"
    },
    "background": {
        "service_worker": "scripts/background.js",
        "type": "module"
    },
    "host_permissions": [
        "https://reportaproblem.apple.com/*"
    ],
    "permissions": [
        "activeTab",
        "cookies",
        "webRequest"
    ]
}